unit uMainConsultaCuit;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Button1: TButton;
    Edit1: TEdit;
    lbNombre: TLabel;
    lbNombrelab: TLabel;
    Label1: TLabel;
    lbTipo: TLabel;
    Label3: TLabel;
    lbEstado: TLabel;
    Label5: TLabel;
    lbDomicilio: TLabel;
    Label7: TLabel;
    lbCondicionIVA: TLabel;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

uses
  FEAFIPLib_TLB;

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
  lwsPadron: IwsPadron;
  lContribuyente: IContribuyente;
  lDomicilio: IDomicilio;
begin
    lwsPadron := CowsPadron.Create;
    lContribuyente := CoContribuyente.Create;
    lwsPadron.ModoProduccion := false;
    lwsPadron.CUIT := 20939802593;
    if lwsPadron.login('certificado.crt', 'clave.key') then
    begin
      if lwsPadron.consultar(StrToFloat(Trim(Edit1.Text)), lContribuyente) Then
      begin
        lbNombre.Caption := lContribuyente.nombre;
        lbTipo.Caption := lContribuyente.tipoPersona;
        lbEstado.Caption := lContribuyente.estadoClave;
        lDomicilio := lContribuyente.domicilioFiscal;
        lbDomicilio.Caption := lDomicilio.direccion + ', ' + lDomicilio.localidad + ', ' + lDomicilio.provincia;
        lbCondicionIVA.Caption := lContribuyente.condicionIVADesc;
      end
      else
        ShowMessage(lwsPadron.ErrorDesc);
  end
  else
    ShowMessage(lwsPadron.ErrorDesc);
end;

end.
